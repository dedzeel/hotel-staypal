@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>StayPal</title>
    <link rel="stylesheet" href="~/css/site.css">
</head>
<body>

    <!-- Navbar -->
    <nav class="navbar">
        <h1><span>Stay</span> Pal</h1>
        <ul>
           
            <li><a asp-controller="Rooms" asp-action="Room">Rooms</a></li>
            <li><a asp-controller="Home" asp-action="About">About</a></li>
            <li><a asp-controller="Home" asp-action="Contact">Contact</a></li>
        </ul>

        <a asp-controller="Account" asp-action="Login">
            <button class="btn login-btn">Login</button>
        </a>
    </nav>

    <!-- Hero Section -->
    <section class="hero">
        <div class="hero-text">
            <h1 style="font-size: 80px;">Forget Busy Work, Start Next Vacation</h1>
            <p>We provide what you need to enjoy your holiday with family.</p>
            <p>Time to make another memorable moment.</p>
            <button class="btn">Show More</button>
        </div>
        <img src="~/css/images/banner.png" alt="Beach">
    </section>

    <!-- Search Bar -->
    <section class="search-bar">
        <div class="search-option">
            <span class="icon">📅</span>
            <button class="search-btn">Check Available</button>
        </div>
        <div class="search-option">
            <span class="icon">👤</span>
            <select id="guests">
                <option value="1" selected>Person 1</option>
                <option value="2">Person 2</option>
                <option value="3">Person 3</option>
                <option value="4">Person 4</option>
            </select>
        </div>
        <div class="search-option">
            <span class="icon">📍</span>
            <button class="search-btn">Select Location</button>
        </div>
        <button class="btn search-main-btn" onclick="searchRooms()">Search</button>
    </section>

    <!-- Most Picked Hotels -->
    <section class="popular-choices">
        <h3>Most Picked</h3>
        <div class="choices-grid">
            <div class="choice">
                <span class="label">₱5,800 per night</span>
                <img src="~/css/images/Double.png">
                <p class="text-left">Double Room</p>
            </div>
            <div class="choice">
                <span class="label">₱3,500 per night</span>
                <img src="~/css/images/Deluxe.jpg" alt="Solea Mactan Resort">
                <p class="text-left">Deluxe</p>
            </div>
            <div class="choice">
                <span class="label">₱9,900 per night</span>
                <img src="~/css/images/Pre.jpg" alt="Quo Vadis Dive Resort">
                <p class="text-left">Presidential Suite</p>
            </div>
        </div>
    </section>

    <!-- Popular Choices -->
    <section class="popular-choices">
        <h3>Popular Choices</h3>
        <div class="choices-grid">
            <div class="choice">
                <span class="label">Popular Choice</span>
                <img src="~/css/images/Queen.jpg" alt="BE Resort Mactan">
                <p class="text-left">Queens Room</p>
            </div>
            <div class="choice">
                <img src="~/css/images/single.jpg" alt="Solea Mactan Resort">
                <p class="text-left">Single Room</p>
            </div>
            <div class="choice">
                <img src="~/css/images/deluxe1.jpg" alt="Quo Vadis Dive Resort">
                <p class="text-left">Deluxe Room</p>
            </div>
          
        </div>

        <div class="choices-grid2">
            <div class="choice">
                <img src="~/css/images/P5.png" alt="Marlins Beach Resort">
                <p class="text-left">Marlins Beach Resort</p>
            </div>
            <div class="choice">
                <img src="~/css/images/P6.png" alt="Amihan Beach Cabanas">
                <p class="text-left">Amihan Beach Cabanas</p>
            </div>
            <div class="choice">
                <img src="~/css/images/P7.png" alt="Hippocampus Beach Resort">
                <p class="text-left">Hippocampus Beach Resort</p>
            </div>
            <div class="choice">
                <span class="label">Popular Choice</span>
                <img src="~/css/images/P8.png" alt="Fantasy Lodge">
                <p class="text-left">Fantasy Lodge</p>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer>
        <p>&copy; 2025 StayPal. All rights reserved.</p>
    </footer>

    <script src="~/js/script.js"></script>
</body>
</html>