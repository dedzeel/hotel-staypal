@model ELNET01.Models.Contact

@{
    ViewData["Title"] = "Contact Us";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Contact Us - StayPal</title>
    <link rel="stylesheet" href="~/css/site.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>

<section class="contact-section container mt-5">
    <h2 class="text-center">Contact Us</h2>
    <p class="text-center">If you have any questions, feel free to reach out to us!</p>

    <div class="row">
        <!-- Contact Information -->
        <div class="col-md-6">
            <h3>Address</h3>
            <p>123 StayPal, Cebu City, Philippines</p>

            <h3>Email</h3>
            <p>support@StayPal.com</p>

            <h3>Phone</h3>
            <p>+63 912 345 6789</p>
        </div>

        <!-- Contact Form -->
        <div class="col-md-6">
            <form asp-controller="Contact" asp-action="Submit" method="post" class="p-4 shadow rounded bg-white">
                <div class="mb-3">
                    <label class="form-label">Name</label>
                    <input asp-for="Name" class="form-control" required />
                </div>

                <div class="mb-3">
                    <label class="form-label">Email</label>
                    <input asp-for="Email" type="email" class="form-control" required />
                </div>

                <div class="mb-3">
                    <label class="form-label">Message</label>
                    <textarea asp-for="Message" class="form-control" rows="4" required></textarea>
                </div>

                <button type="submit" class="btn btn-warning w-100">Send</button>
            </form>
        </div>
    </div>
</section>

</body>
</html>
